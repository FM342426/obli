@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using NearDupFinder.Web.Auth
 
@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager Nav

<PageTitle>NearDupFinder.Web</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <!-- Barra superior horizontal -->
        <div class="top-row px-4 d-flex justify-content-between align-items-center" style="background:#f5f5f5; padding:0.5rem 1rem;">
            <div>
              </div>

            <div>
                @if (user?.Identity?.IsAuthenticated ?? false)
                {
                    <span>Hola, @user.Identity.Name</span>
                    <button class="btn btn-link" @onclick="Logout">Cerrar sesión</button>
                }
                else
                {
                    <span>No autenticado</span>
                }
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; } = default!;

    private ClaimsPrincipal? user;

    protected override async Task OnParametersSetAsync()
    {
        var authState = await AuthenticationStateTask;
        user = authState.User;
    }

    private void Logout()
    {
        AuthProvider.Logout();
        Nav.NavigateTo("/"); 
    }
}
